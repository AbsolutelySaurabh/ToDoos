<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.absolutelysaurabh.todoapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddTaskActivity"/>

        <provider
            android:authorities="com.example.absolutelysaurabh.todoapp"
            android:name="com.example.absolutelysaurabh.todoapp.data.TaskContentProvider"
            android:enabled="true"
            android:exported="false"/>

    </application>

</manifest>